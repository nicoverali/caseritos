{
  "name": "caseritos-api",
  "version": "1.0.0",
  "engines": {
    "node": "16.2.0"
  },
  "description": "A Node API for Caseritos app",
  "main": "dist/app.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "lint:staged": "eslint $(git diff --name-only --cached -- '*.ts')",
    "format": "prettier -w src/**/*.ts&& eslint src/**/*.ts --fix",
    "format:staged": "prettier -w -u $(git diff --name-only --cached)",
    "watch": "nodemon --watch 'src/**' --watch .env --watch docs/** --ext 'ts,json,yml' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/app.ts'",
    "build": "tsc",
    "start": "node dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iaw-2021/nicoverali-servicio-web.git"
  },
  "keywords": [
    "caseritos",
    "api",
    "iaw",
    "node"
  ],
  "author": "Nicol√°s Alejandro Vera",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iaw-2021/nicoverali-servicio-web/issues"
  },
  "homepage": "https://github.com/iaw-2021/nicoverali-servicio-web#readme",
  "devDependencies": {
    "@types/async-redis": "^1.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.11",
    "@types/express": "^4.17.12",
    "@types/express-unless": "^0.5.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/pg": "^8.6.0",
    "@types/redis": "^2.8.29",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-plugin-openapi": "^0.0.4",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-unless": "^0.5.0",
    "jsonwebtoken": "^8.5.1",
    "openapi-comment-parser": "^1.0.0",
    "pg": "^8.6.0",
    "redis": "^3.1.2",
    "sqlstring": "^2.3.2",
    "swagger-ui-express": "^4.1.6"
  }
}
